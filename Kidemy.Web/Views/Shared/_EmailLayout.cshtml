                                    <table width="100%" align="center" cellpadding="0" cellspacing="0" border="0">
                                        <tr>
                                            <td valign="top"><![endif]-->
                                    <div class="layer_2"
                                         style="display: inline-block; vertical-align: top; width: 100%; max-width: 600px;">
                                        <table border="0" cellspacing="0" class="edcontent"
                                               style="border-collapse: collapse;width:100%">
                                            <tbody>
                                                <tr>
                                                    <td valign="top" class="edbutton" style="padding: 20px;">
                                                        <table cellspacing="0" cellpadding="0" style="text-align: center;margin:0 auto;"
                                                               align="center">
                                                            <tbody>
                                                                <tr>
                                                                    <td align="center"
                                                                        style="border-radius: 54px; padding: 20px; background: #55a8f8;">
                                                                        <a href="@SiteTools.SiteAddress" style="font-size: 20px; color: #ffffff; font-weight: bold; font-family: Helvetica, Arial, sans-serif; text-decoration: none; display: inline-block;">
