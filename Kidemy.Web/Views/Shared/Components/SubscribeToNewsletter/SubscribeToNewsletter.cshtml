@using Kidemy.Application.ViewModels.SiteSetting;
@model SiteSettingDetailsViewModel;

<p class="my-3">@Html.Raw(Model.NewsletterDescription)</p>

<form asp-action="Register" asp-controller="Newsletter" class="row row-cols-lg-auto g-2">
    <div class="col-12 col-md-6">
        <input class="form-control" placeholder="@Localizer["Email"]" name="Email" autocomplete="off">
    </div>
    <div class="col-12 col-md-6">
        <button type="submit" class="btn btn-dark m-0">@Localizer["SubscribeToNewsletter"]</button>
    </div>
</form>