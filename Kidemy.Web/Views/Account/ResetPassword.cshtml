@using Kidemy.Application.ViewModels.User;
@using Kidemy.Application.ViewModels.User.ClientSide;
@model ResetPasswordViewModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = Localizer["ResetPassword"];
}

<div class="row my-5">
    <div class="col-sm-10 col-xl-8 m-auto">

        <!-- Title -->
        <span class="mb-0 fs-1">🤔</span>
        <div class="d-flex">
            <h1 class="fs-4 mb-4">@Localizer["ResetPassword"]</h1>
            <a class="d-flex text-primary align-item-center ms-auto" href="/"><span class="me-2">@Localizer["BackToHome"]</span> <i class="fa fa-home" aria-hidden="true"></i></a>
        </div>
        <h5 class="fw-light mb-4">@Localizer["Please enter your new password"]</h5>

        <!-- Form START -->
        <form asp-action="ResetPassword" asp-controller="Account" method="post">

            <!-- Password -->
            <div class="mb-4">
                <label for="inputPassword5" class="form-label">@Localizer["NewPassword"] *</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
                    <input type="password" asp-for="Password" class="form-control border-0 bg-light rounded-end ps-1" placeholder="*********" id="inputPassword5">
                </div>
                <span class="text-danger" asp-validation-for="Password"></span>

            </div>
            <!-- Confirm Password -->
            <div class="mb-4">
                <label for="inputPassword6" class="form-label">@Localizer["ConfirmNewPassword"] *</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
                    <input type="password" asp-for="ConfirmPassword" class="form-control border-0 bg-light rounded-end ps-1" placeholder="*********" id="inputPassword6">
                </div>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

            </div>

            <!-- Button -->
            <div class="align-items-center">
                <div class="d-grid">
                    <button class="btn btn-primary mb-0 loading-support" type="submit">@Localizer["Confirm"]</button>
                </div>
            </div>
        </form>
    </div>
</div> 