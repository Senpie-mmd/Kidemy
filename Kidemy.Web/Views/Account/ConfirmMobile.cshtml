@using Kidemy.Application.ViewModels.User;
@using Kidemy.Application.ViewModels.User.ClientSide;
@model ConfirmMobileViewModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = Localizer["ConfirmMobile"];
}
<div class="row my-5">
    <div class="col-sm-10 col-xl-8 m-auto">

        <!-- Title -->
        <span class="mb-0 fs-1">🤔</span>
        <div class="d-flex">
            <h1 class="fs-4">@Localizer["ConfirmMobile"]</h1>
            <a class="d-flex text-primary align-item-center ms-auto" href="/"><span class="me-2">@Localizer["BackToHome"]</span> <i class="fa fa-home" aria-hidden="true"></i></a>
        </div>
        <h5 class="fw-light mb-4">@Localizer["Please enter the verification code sent to your mobile number"]</h5>
        <!-- Form START -->
        <form asp-action="ConfirmMobile" asp-controller="Account" method="post">
            <!-- Email -->
            <div class="mb-4">
                <label class="form-label">@Localizer["ConfirmationCode"]</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-phone-fill"></i></span>
                    <input type="tel" class="form-control border-0 bg-light rounded-end ps-1" asp-for="ConfirmationCode" maxlength="8" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" class="form-control" placeholder="@Localizer["EnterConfirmCode"]" autocomplete="off" autofocus>
                </div>
                <span class="text-danger" asp-validation-for="ConfirmationCode"></span>
                <span></span>
            </div>
            <div class="align-items-center">
                <div class="d-grid">
                    <button class="btn btn-primary mb-0 loading-support" type="submit">@Localizer["Send"]</button>
                </div>
            </div>
        </form>
        <!-- Form END -->
    </div>
</div> 