@using Kidemy.Application.ViewModels.InPersonCourse;
@using Kidemy.Application.ViewModels.Course;
@using Kidemy.Domain.Enums.Course;
@using Kidemy.Domain.Statics
@using Microsoft.Extensions.Localization
@model ClientSideFilterInPersonCourseViewModel
@inject IStringLocalizer stringLocalizer;

@{
    ViewData["Title"] = Localizer["CoursesList"];
}

<form asp-area="" asp-controller="InPersonCourse" asp-action="InPersonCoursesList" method="get" id="filter-search">
    <input type="hidden" asp-for="Page" />

    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-xl-9">
                    <div class="row mb-4 align-items-center">
                        <!-- Search bar -->
                        <div class="col-xl-6">
                            <div class="border rounded p-2">
                                <div class="input-group input-borderless">
                                    <input class="form-control me-1" type="search" placeholder="@Localizer["SearchCourse"]" asp-for="Title">
                                    <button type="submit" class="btn btn-primary mb-0 rounded z-index-1"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row g-4">

                        @foreach (var item in Model?.Entities ?? new List<ClientSideInPersonCourseViewModel>())
                        {
                            <div class="col-sm-6 col-xl-4">

                                @* <partial name="_InPersonCoursePartial" model="item" />*@
                                <div>
                                  در حال برگزاری  دوره
                                </div>
                            </div>
                        }

                    </div>
                    <div class="col-12">
                        <partial name="_Paging" model="Model.GetCurrentPaging()" />
                    </div>
                </div>
            </div>
        </div>
    </section>

</form>
