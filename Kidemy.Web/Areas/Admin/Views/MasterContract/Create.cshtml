@using Kidemy.Application.ViewModels.MasterContract;
@using Kidemy.Domain.Statics;
@using Kidemy.Web.Areas.Admin.Models;
@model AdminSideCreateMasterContractViewModel

@{
    ViewData["Title"] = Localizer["CreateMasterContract"];
}

<form asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">
            <div class="card p-lg-5">
                <div class="card-body">
                    <div class="row">
                        @await Component.InvokeAsync("Localized", Model)
                        <div class="col-12">
                            <div class="form-group mb-4">
                                <label asp-for="FileName" class="form-label"></label>
                                <partial name="_Upload" model="@(new UploadModel{Index = 0,FileType = UploadFileType.Document, IsMultiple = false, MaxSizeInKB = 100_000_000, SaveLocation = SiteTools.MasterContractFilePath, InputName = "FileName",Files = new List<string>() {Model.FileName}})" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-12">
                            <div class="mb-4 form-check padding-top-2-percent">
                                <input class="form-check-input" type="checkbox" asp-for="IsPublished">
                                <label class="form-check-label" asp-for="IsPublished"></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 d-flex justify-content-start">
                                <button type="submit" class="btn btn-success">@Localizer["Submit"]</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div asp-validation-summary="All" class="text-danger mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</form>

