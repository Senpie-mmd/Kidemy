@using Kidemy.Application.ViewModels.VIPPlan;

@model AdminSideUpsertVIPPlanViewModel
@{
    ViewData["Title"] = Localizer["CreateVIPPlan"];
}

<form asp-action="Create">
    <div class="row">
        <div class="col-md-12">
            <div class="card p-lg-5">
                <div class="card-body">
                    <div class="row">
                        @await Component.InvokeAsync("Localized", Model)
                        <div class="col-12 col-lg-12">
                            <div class="mb-4">
                                <label class="form-label" asp-for="DurationDay"></label>
                                <input asp-for="DurationDay" class="form-control number" min="1"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-12">
                            <div class="mb-4">
                                <label class="form-label" asp-for="Price"></label>
                                <input class="form-control price" name="Price" value="@(Model.Price.ToString("#,0"))" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-12">
                            <div class="mb-4 form-check padding-top-2-percent">
                                <input class="form-check-input" type="checkbox" asp-for="IsPublished">
                                <label class="form-check-label" asp-for="IsPublished"></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 d-flex justify-content-start">
                                <button type="submit" class="btn btn-success">@Localizer["Submit"]</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div asp-validation-summary="All" class="text-danger mt-3"></div>
                </div>
            </div>
        </div>

    </div>
</form>

