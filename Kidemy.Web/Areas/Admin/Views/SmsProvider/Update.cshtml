@using Kidemy.Application.ViewModels.SmsProvider;
@using Kidemy.Domain.Enums.Sms;
@model AdminSideUpsertSmsProviderViewModel
@{
    ViewData["Title"] = Localizer["ViewTitle.Admin.UpdateSmsProvider"];
}

<form asp-area="Admin" asp-controller="SmsProvider" asp-action="Update" method="post">
    <input type="hidden" name="SelectedImageName" id="SelectedImageName" />
    <div class="row">
        <div class="col-md-12">
            <div class="card p-lg-5">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <div class="form-group mb-4">
                                <label asp-for="SmsProviderType" class="form-label"></label>
                                <input value="@Model.SmsProviderType.GetEnumName()" class="form-control" disabled/>                
                            </div>
                        </div>
                        <div class="col-12 col-lg-12">
                            <div class="form-group mb-4">
                                <label asp-for="ApiKey" class="form-label"></label>
                                <input asp-for="ApiKey" class="form-control" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-12">
                            <div class="mb-4 form-check padding-top-2-percent">
                                <input class="form-check-input" type="checkbox" asp-for="IsDefault">
                                <label class="form-check-label" asp-for="IsDefault"></label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 d-flex justify-content-start">
                                <button type="submit" class="btn btn-success">@Localizer["Edit"]</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-danger" asp-validation-summary="All"></div>
                </div>
            </div>
        </div>
    </div>
</form>