@using Barnamenevisan.Localizing.Shared;
@model PagingViewModel

@if (Model.PageCount > 1)
{
    <nav aria-label="Page navigation ">
        <ul class="pagination justify-content-center mt-3">
            @if (Model.StartPage < Model.Page)
            {
                <li class="page-item prev">
                    <a class="page-link cursor-pointer" data-page="@(Model.Page - 1)" onclick="ModelFillPageId(@(Model.Page - 1))">
                        <i class="tf-icon bx bx-chevron-left"></i>
                    </a>
                </li>
            }
            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                if (Model.Page == i)
                {
                    <li class="page-item active">
                        <a class="page-link cursor-pointer" data-page="0" href="javascript:void(0);">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link cursor-pointer" data-page="@i" onclick="ModelFillPageId(@i)">@i</a>
                    </li>
                }
            }
            @if (Model.EndPage > Model.Page)
            {
                <li class="page-item next">
                    <a class="page-link cursor-pointer" data-page="@(Model.Page + 1)" onclick="ModelFillPageId(@(Model.Page + 1))">
                        <i class="tf-icon bx bx-chevron-right"></i>
                    </a>
                </li>
            }

        </ul>
    </nav>
}
