@using Kidemy.Application.ViewModels.Master;
@using Kidemy.Domain.Statics
@using Kidemy.Domain.Enums.Master
@model AdminSideMasterDetailsViewModel;

@{
    ViewData["Title"] = Localizer["MasterInformationDetails"];
}


<div class="col-md-12 accordion mb-3">
    <div class="card accordion-item">
        <div class="card-header accordion-header">
            <button type="button" class="accordion-button" data-bs-toggle="collapse" data-bs-target="#masterInformation" aria-expanded="false" aria-controls="masterInformation">
                <h5>@Localizer["MasterInformation"]</h5>
            </button>
        </div>
        <div class="accordion-collapse collapse  mb-4 text-nowrap " id="masterInformation">
            <form typeof="post" asp-controller="Master" asp-action="ChangeStatus">
                <div class="row m-4">
                    <div class="col-md-12 mb-3">
                        <div class="row mt-4">
                            <div class="col-12 col-lg-12">
                                <div class="form-group mb-4 large-text">
                                    <span>@Localizer["Bio"] :</span>
                                    @Model.Bio
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group mb-4">
                                    <span>@Localizer["FatherName"] :</span>
                                    @Model.FatherName
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group mb-4">
                                    <span>@Localizer["NationalIDNumber"] :</span>
                                    @Model.NationalIDNumber
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group mb-4">
                                    <span>@Localizer["IdentificationNumber"] :</span>
                                    @Model.IdentificationNumber
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group mb-4">
                                    <span>@Localizer["PlaceOfIssuance"] :</span>
                                    @Model.PlaceOfIssuance
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group mb-4">
                                    <span>@Localizer["PostalCode"] :</span>
                                    @Model.PostalCode
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group mb-4">
                                    <span>@Localizer["Address"] :</span>
                                    @Model.Address
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <input type="hidden" asp-for="Id" />
                                <label asp-for="Status" class="form-label">@Localizer["Status"] :</label>
                                <select asp-for="Status" class="form-select me-2 ">
                                    @foreach (var status in Enum.GetValues(typeof(MasterStatus)).Cast<MasterStatus>())
                                    {
                                        if (Model.Status == status)
                                        {
                                            <option value="@status" selected="">@status.GetEnumName()</option>
                                        }
                                        else
                                        {
                                            <option value="@status">@status.GetEnumName()</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group mb-4">
                                    <h6>@Localizer["IdentificationFile"] :</h6>
                                    <img src="@(!string.IsNullOrWhiteSpace(Model.IdentificationFileName) ? $"{SiteTools.MasterImagePath}{Model.IdentificationFileName}" : SiteTools.MasterImagePath+SiteTools.DefaultImageName)" class="w-50 h-50 rounded-2 mb-3 mt-2" ImageFile="1" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 d-flex justify-content-start">
                                    <button type="submit" class="btn btn-success">
                                        @Localizer["ChangeStatus"]
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>