@using Kidemy.Application.Convertors
@using Kidemy.Application.Statics
@using Kidemy.Domain.Enums.Ticket
@using Kidemy.Application.ViewModels.Ticket
@model CreateTicketViewModel

@{
    ViewData["Title"] = Localizer["AddTicket"];
}
<!-- Edit profile START -->
<div class="card bg-transparent border rounded-3">
    <!-- Card header -->
    <div class="card-header bg-transparent border-bottom">
        <h3 class="card-header-title mb-0 ff-vb fs-5">@Localizer["AddTicket"]</h3>
    </div>
    <!-- Card body START -->
    <div class="card-body">
        <!-- Form -->
        <form asp-action="Create" asp-area="UserPanel" asp-controller="Ticket" class="row g-4">

            <div class="col-md-12">
                <label class="form-label" asp-for="Title"></label>
                <input asp-for="Title" class="form-control" type="text" placeholder="@Localizer["Title"]">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Section" class="form-label"></label>
                <select asp-for="Section" asp-items="@Html.GetEnumSelectList<TicketSection>()" class="form-select js-choice border-0 z-index-9 bg-transparent" aria-label=".form-select-sm" data-search-enabled="true">
                    <option value="">@Localizer["Select"]</option>
                </select>
                <span class="text-danger" asp-validation-for="Section"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Priority" class="form-label"></label>
                <select asp-for="Priority" asp-items="@Html.GetEnumSelectList<TicketPriority>()" class="form-select js-choice border-0 z-index-9 bg-transparent" aria-label=".form-select-sm" data-search-enabled="true">
                    <option value="">@Localizer["Select"]</option>
                </select>
                <span class="text-danger" asp-validation-for="Priority"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Message" class="form-label"></label>
                <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                <span class="text-danger" asp-validation-for="Message"></span>
            </div>

            <!-- Save button -->
            <div class="d-sm-flex justify-content-end">
                <button type="submit" class="btn btn-primary mb-0 loading-support">@Localizer["Send"]</button>
            </div>
        </form>
    </div>
    <!-- Card body END -->
</div>
