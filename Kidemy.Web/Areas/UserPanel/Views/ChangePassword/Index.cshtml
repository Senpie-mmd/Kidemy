@using Kidemy.Application.ViewModels.User.ClientSide;
@model ChangePasswordViewModel
@{
    ViewData["Title"] = Localizer["ChangePassword"];
}
<div class="row ">
    <div class="col-xl-12 col-lg-12 col-md-12">

        <div class="card border bg-transparent rounded-3">
            <!-- Card header -->
            <div class="card-header bg-transparent border-bottom">
                <h5 class="card-header-title mb-0">@Localizer["ChangePassword"]</h5>
            </div>
            <form asp-action="Index" asp-controller="ChangePassword" asp-area="UserPanel" method="post">
                <!-- Card body START -->
                <div class="card-body">
                    <!-- Current password -->
                    <div class="mb-3">
                        <label class="form-label">@Localizer["OldPassword"]</label>
                        <div class="input-group">
                            <input id="id_password" asp-for="OldPassword" class="form-control" type="password" placeholder="********">
                            <span class="input-group-text p-0 bg-transparent">
                                <i id="togglePassword" class="far fa-eye cursor-pointer p-2 w-40px"></i>
                            </span>
                        </div>
                        <div class="rounded mt-1" id="psw-strength"></div>
                        <span class="text-danger d-block" asp-validation-for="OldPassword"></span>
                    </div>

                    <!-- New password -->
                    <div class="mb-3">
                        <label class="form-label">@Localizer["NewPassword"]</label>
                        <input asp-for="NewPassword" class="form-control" type="password" placeholder="********">
                        <div class="rounded mt-1" id="psw-strength"></div>
                        <span class="text-danger d-block" asp-validation-for="NewPassword"></span>
                    </div>

                    <!-- Confirm password -->
                    <div class="mb-3">
                        <label class="form-label">@Localizer["ConfirmNewPassword"]</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="********">
                        <span class="text-danger d-block" asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <!-- Button -->
                    <div class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-primary mb-0 loading-support">@Localizer["Submit"]</button>
                    </div>
                </div>
                <!-- Card body END -->
            </form>
        </div>
    </div>
</div>
