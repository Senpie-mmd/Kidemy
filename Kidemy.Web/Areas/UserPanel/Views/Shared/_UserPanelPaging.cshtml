@using Barnamenevisan.Localizing.Shared;
@model PagingViewModel

@if (Model.PageCount > 1)
{
    <div class="text-center mt-4 mt-sm-3">
        <nav class="d-flex justify-content-center mb-0" aria-label="navigation">
            <ul class="pagination pagination-sm pagination-primary-soft d-inline-block d-md-flex rounded mb-0">
                @if (Model.StartPage < Model.Page)
                {
                    <li class="page-item mb-0">
                        <a class="page-link" data-page="@(Model.Page - 1)" href="javascript:void(0);" onclick="FillPageId(@(Model.Page - 1))" tabindex="-1">
                            <i class="fas fa-angle-right"></i>
                        </a>
                    </li>
                }
                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    if (Model.Page == i)
                    {
                        <li class="page-item mb-0 active"><a class="page-link" data-page="0" href="javascript:void(0);">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item mb-0"><a class="page-link" href="javascript:void(0);" data-page="@i" onclick="FillPageId(@i)">@i</a></li>
                    }
                }
                @if (Model.EndPage > Model.Page)
                {
                    <li class="page-item mb-0">
                        <a class="page-link" data-page="@(Model.Page + 1)" href="javascript:void(0);" onclick="FillPageId(@(Model.Page + 1))">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}
